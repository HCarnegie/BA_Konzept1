@model BA_Konzept1.Models.ProducttypesListViewModel
@{
	ViewBag.Title = "Producttypes";
}
<style>
	#cartTable td {
		vertical-align: middle;
	}
</style>

<h2>All Producttypes</h2>
<table id="cartTable" class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var p in Model.Producttypes)
		{
			<tr>
				<td class="text-left">@p.Name</td>
				<td class="text-right">@p.Description</td>
				<td>
					@using (Html.BeginForm("Delete", "Producttype"))
					{
						@Html.Hidden("ProducttypeId", p.ProducttypeID)
                        @Html.HiddenFor(x => x.ReturnUrl)
						<input class="btn btn-sm btn-warning"
							   type="submit" value="Delete" />
					}
				</td>
				<td>
				@Html.ActionLink("Edit", "Edit", new { p.ProducttypeID }, new { @class = "btn btn-default" })
				</td>
			</tr>
		}
	</tbody>
	<tfoot>
		<tr>
			<td>
				@using (Html.BeginForm("Create", "Producttype"))
				{
					<input class="btn btn-sm btn-warning"
						   type="submit" value="Create" />
				}
			</td>
			<td colspan="3" class="text-right">Total: @Model.PagingInfo.TotalItems.ToString()</td>
		</tr>
	</tfoot>
</table>

<div class="btn-group pull-right">
	@Html.PageLinks(Model.PagingInfo, x => Url.Action("List","Producttype", new { page = x }))
</div>
